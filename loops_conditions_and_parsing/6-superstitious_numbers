#!/usr/bin/env bash
# Initialize a counter
count=1

# Use a while loop to loop from 1 to 20
while [ $count -le 20 ]
do
  case $count in
    4)
      # Display "4" and then "bad luck from China" for the 4th iteration
      echo "4"
      echo "bad luck from China"
      ;;
    9)
      # Display "9" and then "bad luck from Japan" for the 9th iteration
      echo "9"
      echo "bad luck from Japan"
      ;;
    17)
      # Display "17" and then "bad luck from Italy" for the 17th iteration
      echo "17"
      echo "bad luck from Italy"
      ;;
    *)
      # Display the current value of count for all other iterations
      echo "$count"
      ;;
  esac

  ((count++))
done
